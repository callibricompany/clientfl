            <input type="text" class="form-control" name="cf_underlying" placeholder="Underlying">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="cf_maturity" placeholder="Maturity">
        </div>
        <button type="submit" class="btn btn-danger">Trade</button>
    </form>
</div>

</main>

<footer>
