<!-- views/pages/register.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>

<div class="container">
<h3><%= products[id].id %></h3>

<form class="" role="search" action="/sendorder" method="POST">
    <input type="hidden" id="productId" name="id" value="<%= products[id].id %>">
    <% for(let i = 0; i < fields.length; i++) { %>
    <div class="form-group">
        <input type="text" class="form-control" name="<%= fields[i] %>" placeholder="<%= fields[i] %>">
    </div>
    <% } %>
    <button type="submit" class="btn btn-danger">Trade</button>
</form>
</div>

<div class="container" style="margin-top: 30px">
    <form class="" role="search" action="/trade" method="POST">
        <div class="form-group">
            <label for="sel1">Autre produit Ã  traiter:</label>
            <select class="form-control" name="prod_id" id="sel1">
            <% for(let i = 0; i < products.length; i++) { %>
                <% if ( i != id ) { %>
                <option value="<%= i %>"><%= products[i].id %></option>
                <% } %>
            <% } %>
            </select>
        </div>
        <button type="submit" class="btn btn-default">change</button>
    </form>
</div>

</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
